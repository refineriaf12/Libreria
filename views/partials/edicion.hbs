<article>

    <a href="/home">&#8592;Volver</a>

   {{#with libro}}
    <form action="/formularioCreacionLibro" method="post">

        <fieldset class="formCol colIzquierda">

            
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" id="titulo" value="{{this.titulo}}">
            <label for="autor">Autor</label>
            <input type="text" name="autor" id="autor" value="{{this.autor}}">
            <label for="genero">Genero</label>
            <input type="text" name="genero" id="genero" value="{{this.genero}}">
            <label for="editorial">Editorial</label>
            <input type="text" name="editorial" id="editorial" value="{{this.editorial}}">
            <input type="submit">Guardar</input>

        </fieldset>

        <fieldset class="formCol colDerecha">

            <input type="file" name="file" id="file" class="inputfile" data-multiple-caption="{count} files selected" multiple >
            <label for="file" class= "mostrarImagen" ><span >+</span></label>
            <label for="precio">Precio</label>
            <input type="number" name= "precio" value="{{this.precio}}">
            <label for="stock">Stock</label>
            <input type="number" name= "stock" value="{{this.stock}}">

        </fieldset>

    </form>
   {{/with}}

